<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            100
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/faces/error.xhtml?faces-redirect=true</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/faces/accesodenegado.xhtml?faces-redirect=true</location>
    </error-page>
    <context-param>
	<param-name>javax.faces.application.CONFIG_FILES</param-name>
	<param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>
    <context-param>
        <param-name>BootsFaces_THEME</param-name>
        <param-value>cerulean</param-value>
    </context-param>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>SSMSRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/index.xhtml</form-login-page>
            <form-error-page>/faces/index.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>Super-Usuario</role-name>
    </security-role>
    <security-role>
        <role-name>Funcionario</role-name>
    </security-role>
    <security-role>
        <role-name>Encargado-Programa</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin-area</web-resource-name>
            <url-pattern>/faces/usuario/*</url-pattern>
            <url-pattern>/faces/rol/*</url-pattern>
            <url-pattern>/faces/parametros/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description></description>
            <role-name>Super-Usuario</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>common-area</web-resource-name>
            <url-pattern>/faces/paciente/*</url-pattern>
            <url-pattern>/faces/clap/*</url-pattern>
            <url-pattern>/faces/crafft/*</url-pattern>
            <url-pattern>/faces/audit/*</url-pattern>
            <url-pattern>/faces/home.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description></description>
            <role-name>Super-Usuario</role-name>
            <role-name>Funcionario</role-name>
            <role-name>Encargado-Programa</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
