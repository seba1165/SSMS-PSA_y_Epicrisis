<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/faces/error.xhtml</location>
    </error-page>
    <context-param>
        <param-name>BootsFaces_THEME</param-name>
        <param-value>cerulean</param-value>
    </context-param>
    <security-constraint>
        <display-name>SuperUsuarioConstrain</display-name>
        <web-resource-collection>
            <web-resource-name>Usuarios</web-resource-name>
            <description/>
            <url-pattern>/faces/usuario/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Auditoria</web-resource-name>
            <description/>
            <url-pattern>/faces/auditoria/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>CESFAM</web-resource-name>
            <description/>
            <url-pattern>/faces/cesfam/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Comuna</web-resource-name>
            <description/>
            <url-pattern>/faces/comuna/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Ley Social</web-resource-name>
            <description/>
            <url-pattern>/faces/ley_social/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Estado civil</web-resource-name>
            <description/>
            <url-pattern>/faces/estado_civil/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Nacionalidad</web-resource-name>
            <description/>
            <url-pattern>/faces/nacionalidad/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Prevision</web-resource-name>
            <description/>
            <url-pattern>/faces/prevision/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Pueblo Originario</web-resource-name>
            <description/>
            <url-pattern>/faces/pueblo_originario/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Region</web-resource-name>
            <description/>
            <url-pattern>/faces/region/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Super Usuario</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>UsuarioLogueadoConstrain</display-name>
        <web-resource-collection>
            <web-resource-name>Pacientes</web-resource-name>
            <description/>
            <url-pattern>/faces/paciente/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Funcionario CESFAM</role-name>
            <role-name>Empleado Municipal</role-name>
            <role-name>Super Usuario</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>SSMSRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/index.xhtml</form-login-page>
            <form-error-page>/faces/index.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Funcionario CESFAM</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Empleado Municipal</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Super Usuario</role-name>
    </security-role>
</web-app>
